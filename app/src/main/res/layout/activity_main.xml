<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/svRestaurant"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!--    <TextView-->
<!--        android:id="@+id/textView2"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="100px"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:text="Logo" />-->

    <Button
        android:id="@+id/btTestPlaceobj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/svRestaurant"
        android:text="Button" />

    <ListView
        android:id="@+id/lvRestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menu_navBar"
        android:layout_below="@+id/btTestPlaceobj" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryLightColor"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@color/primaryTextColor"
        app:menu="@menu/bottom_navigation" />

</RelativeLayout>